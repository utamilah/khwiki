<section class="wrapper">
  <header class="main-header">
    <h2>Edit World</h2>
    <p><%= link_to 'Back', world_path(@world) %></p>
  </header>

  <main class="form-content">
    <%= simple_form_for @world, :html => {:class => "pure-form pure-form-stacked"} do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.label :img_url %>
        <%= f.text_field :img_url %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>

      <div class="form-submit">
        <%= f.submit %>
      </div>

      <%= simple_form_for @world, method: :delete do |f| %>
        <div class="form-submit delete">
          <%= f.submit "Delete"%>
        </div>
      <% end %>

    <% end %>

  </main>
</section>
