<section class="wrapper">
  <header class="main-header">
    <h2>Edit World / <%= link_to @world.name, world_path(@world) %></h2>
  </header>

  <main class="form-content">
    <%= simple_form_for @world, :html => {:class => "pure-form pure-form-stacked"} do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.label :img_url %>
        <%= f.text_field :img_url %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description %>
      </div>

      <div class="form-submit">
        <%= f.submit %>
      </div>

    <% end %>

    <%= simple_form_for @world, method: :delete do |f| %>
      <div class="form-delete">
        <%= f.submit "Delete"%>
      </div>
    <% end %>

  </main>
</section>
