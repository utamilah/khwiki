<section class="wrapper">
  <header class="main-header">
    <h2>Edit Character / <%= link_to @character.name, world_character_path %></h2>
    <p></p>
  </header>
  <main class="form-content">
    <%= simple_form_for [@world, @character], :html => {:class => "pure-form pure-form-stacked"} do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.label :img_url %>
        <%= f.text_field :img_url %>
      </div>

      <div class="form-group">
        <%= f.label :origin %>
        <%= f.text_field :origin %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>

      <div class="form-submit">
        <%= f.submit %>
      </div>

    <% end %>

    <%= simple_form_for [@world, @character], method: :delete do |f| %>
      <div class="form-submit delete">
        <%= f.submit "Delete" %>
      </div>
    <% end %>

  </main>
</section>
